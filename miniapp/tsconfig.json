{
	"extends": "../tsconfig.json",

	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"noEmit": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"~types": ["../types/index"],
			"~types/*": ["../types/*"],
			"~api": ["../api/index"],
			"~i18n": ["../i18n/index"],
			"@/*": ["./src/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true
	},

	"include": [
		"**/*.ts",
		"**/*.tsx",
		"../api/*.ts",
		"../types/**/*.ts",
		"../i18n/**/*.ts",
		"../global.d.ts"
	],
	"exclude": ["node_modules"]
}
