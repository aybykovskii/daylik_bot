{
	"extends": "../../../tsconfig.json",

	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"noEmit": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"~common/*": ["../../common/*"],
			"~types": ["../../types/index"],
			"~types/*": ["../../types/*"],
			"~api": ["../api/index"],
			"@/*": ["./src/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true
	},

	"include": [
		"**/*.ts",
		"**/*.tsx",
		"../api/*.ts",
		"../../common/**/*.ts",
		"../../types/**/*.ts",
		"../../../global.d.ts"
	],
	"exclude": ["node_modules"]
}
