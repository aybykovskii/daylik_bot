{
	"extends": "../../../tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"noEmit": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"~common/*": ["../../common/*"],
			"~types": ["../../types/index"],
			"~types/*": ["../../types/*"],
			"@api": ["../api/index"],
			"@helpers": ["./helpers/index"]
		}
	},
	"include": [
		"**/*.ts",
		"../../common/**/*.ts",
		"../../types/**/*.ts",
		"../api/*.ts",
		"../../../global.d.ts"
	],
	"exclude": ["node_modules"]
}
